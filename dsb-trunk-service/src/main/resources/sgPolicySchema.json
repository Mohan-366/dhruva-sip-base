{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SG policy",
  "description": "SG policy schema",
  "type": "array",
  "items": { "$ref": "#/definitions/sgPolicy" },
  "definitions": {
    "sgPolicy": {
      "type": "object",
      "properties": {
        "name": {
          "description": "SG Policy name",
          "type": "string"
        },
        "lbType": {
          "description": "lbType",
          "type": "string"
        },
        "failoverResponseCodes": {
          "description": "failover response code",
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 400,
            "maximum": 600,
            "exclusiveMaximum": true
          }
        },
        "retryResponseCode":{
          "description":"interface IP address of the servergroup element",
          "type":"number"
        }
      },
      "required": [ "name", "lbType", "failoverResponseCodes"],
      "additionalProperties":false
    }
  }
}